            text-align: center;
        }

        .cta a {
            display: inline-block;
            padding: 10px 20px;
            background-color: #2738FF;
            /* Primary button color */
            color: #fff;
            text-decoration: none;
            font-weight: bold;
            border-radius: 5px;
        }
        .text-bold{
            font-weight: bold;
        }

        @media only screen and (max-width: 480px) {
            .container {
